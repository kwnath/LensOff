<div class="container">
  <div class="form-new">
  <h1 class="text-center">Add new Lens</h1>
    <div class="row text-center">
      <div class="col-xs-6 col-xs-offset-3">
      <%= simple_form_for(@lense) do |l| %>
        <%= l.input :name %>
        <%= l.input :address %>
        <%= l.input :description %>
        <%= l.input :price %>
        <%= l.input :camera_type, prompt: 'Camera type', label: false, collection: ["DSLR", "SLR", "Mirrorless"] %>
        <%= l.input :brandname, prompt: 'Lens brand', label: false, collection: ["Bower", "Canon", "Fujifilm", "Handevision", "IRIX", "Kowa", "Leica", "Lensbaby", "Mayer-OptikGorlitz", "Mitakon Zhongyi", "Nikon", "Olympus", "Opteka", "Panasonic", "Pentax", "Phoenix", "Samyang", "Schneider", "Sigma", "Sony", "Sunex", "Tamron", "Tokina", "Venus Optics", "Zeiss", "Other"] %>
        <%= l.input :mount_type, prompt: 'Mount type', label: false, collection: ["Canon EF-M", "Canon EOS", "Fujifilm X Mount", "Leica L-Mount", "Micro Four Thirds", "Nikon", "Nikon 1", "Pentax", "Pentax Q", "Sigma SA", "Sony A-mount", "Sony E-Mount", "Samsung NX", "Four Thirds", "Universal M42", "T-Mount", "Tamron Adaptall", "Other"] %>
        <%= l.input :condition, prompt: 'Condition',label: false, collection: ["Poor", "Medium", "Good", "Very Good", "Mint"] %>
        <%= l.input :image_stabilization, label: false, prompt: 'Image stabilization',collection: ["Yes", "No"] %>
        <%= l.input :aperture_min, label: "Aperture Min", placeholder: 'Aperture Min' %>
        <%= l.input :aperture_max, label: "Aperture Max", placeholder: 'Aperture Max' %>
        <%= l.input :focal_length_min %>
        <%= l.input :focal_length_max %>
        <%= l.input :photos, as: :attachinary  %>

        <%= l.button :submit %>

      <% end %>
      </div>
    </div>
    </div>
</div>

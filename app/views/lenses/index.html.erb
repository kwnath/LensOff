<div class="container">
<div class="row text-center">
  <%= render 'shared/search' %>
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
    <h1 class="header-title" >All our lenses</h1>
    <div class="text-center">
      <% if user_signed_in? %>
      <p>Have a lense to rent?</p>
      <%= link_to "Add a new lense", new_lense_path, class: "text-bigger" %>
      <% end %>
    </div>
    <div class="margin-top-30"></div>
    <% @lenses.each do |lense| %>
    <%= link_to lense_path(lense) do %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-center">
      <div class="card thumbnail">
        <% if lense.photos? %>
        <%= cl_image_tag lense.photos.first.path, :client_hints=>true, :width=>"auto:100:387", :height=>"150", :crop=>"fit", class: "pad-bot-20"%>
        <% end %>
        <div class="card-category vertical-align">
          <hr>
          <h3> <%= lense.name %> </h3>
          <p>$<%= lense.price %> / day</p>
          <p> Condition: <strong> <%= lense.condition %> </strong></p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
  <!-- Button (call-to-action) -->
</div>
</div>

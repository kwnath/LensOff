  <%= simple_form_for @search, :url => lenses_search_path, :method => :get do |l| %>

    <%= l.input :condition, prompt: 'Condition',label: false, collection: ["Poor", "Medium", "Good", "Very Good", "Mint"] %>
    <%= l.input :image_stabilization, label: false, prompt: 'Image stabilization',collection: ["Yes", "No"] %>
    <%= l.input :aperture_min, label: false, placeholder: 'Aperture Min' %>
    <%= l.input :aperture_max, label: false, placeholder: 'Aperture Max' %>

    <%= l.button :submit, "Search", class: "btn-lens btn-lens-primary" %>
  <% end %>

  <%= simple_form_for @search, :url => lenses_search_path, :method => :get do |l| %>
    <%= l.input :camera_type, label: 'Camera type', collection: ["DSLR", "SLR", "Mirrorless"] %>
    <%= l.input :brandname, label: 'Lens brand', collection: ["Bower", "Canon", "Fujifilm", "Handevision", "IRIX", "Kowa", "Leica", "Lensbaby", "Mayer-OptikGorlitz", "Mitakon Zhongyi", "Nikon", "Olympus", "Opteka", "Panasonic", "Pentax", "Phoenix", "Samyang", "Schneider", "Sigma", "Sony", "Sunex", "Tamron", "Tokina", "Venus Optics", "Zeiss", "Other"] %>
    <%= l.input :mount_type, label: 'Mount type', collection: ["Canon EF-M", "Canon EOS", "Fujifilm X Mount", "Leica L-Mount", "Micro Four Thirds", "Nikon", "Nikon 1", "Pentax", "Pentax Q", "Sigma SA", "Sony A-mount", "Sony E-Mount", "Samsung NX", "Four Thirds", "Universal M42", "T-Mount", "Tamron Adaptall", "Other"] %>

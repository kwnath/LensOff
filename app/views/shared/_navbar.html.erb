<div class="navbar-wagon">
  <!-- Logo -->

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "camera.svg" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!--  DEVISE LOGIN -->
    <% if user_signed_in? %>
      <div id="pre-pic">
      <%= link_to 'Search', lenses_path, class: "navbar-wagon-item" %>
      <%= link_to 'Lend a Lens', new_lense_path, class: "navbar-wagon-item" %>
      </div>

      <!-- AVATAR -->
      <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
      <div class="dropdown">
        <%= image_tag avatar_url, class: "avatar navbar-wagon-item dropdown-toggle", id: "navbar-wagon-menu", "data-toggle"=>"dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to('Logout', destroy_user_session_path, method: :delete, class: "navbar-wagon-item") %></li>
        </ul>
      </div>
      <% else %>
      <div id="login">
      <%= link_to('Login', new_user_session_path, class: "navbar-wagon-item")  %>
      </div>
    <% end %>
  </div>

    <!-- Dropdown appearing on mobile only -->
  <div class="hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <li><%= link_to 'Search', lenses_path %></li>
          <li><%= link_to 'Lend a Lens', new_lense_path %></li>
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
        <% else %>
          <li><%= link_to('Login', new_user_session_path) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


